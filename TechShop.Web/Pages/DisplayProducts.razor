@using TechShop.Models.Dtos;

@foreach (var item in Products)
{
    <div class="col-lg-4 col-md-6">
        <a href="/ProductDetails/@item.MaSP">
            <div class="card">
                <img class="img-thumbnail" src="@item.Image">
                <div class="card-body">
                    
                        <h5>@item.TenSP</h5>
                        <p class="blog-meta">
                            <span class="author"><i class="fas fa-user"></i> @item.Id</span>
                            <br>
                            <span class="date"><i class="fas fa-calendar"></i> @item.NgayDang</span>
                        </p>
                        <p class="excerpt">@item.MoTa</p>
                        <a href="/singleproduct" class="read-more-btn">read more <i class="fas fa-angle-right"></i></a>
                    </div>
              
            </div>
        </a>
    </div>
    
}

@code {
    [Parameter]
    public IEnumerable<ProductDto> Products { get; set; }

}